{% if labels %}
            'labels' => [
{% endif %}
{% for key, label in labels %}
{% if label %}
                '{{ key }}' => {{ m.translate(label, text_domain, translate) }},
{% endif %}
{% endfor %}
{% if labels %}
            ],
{% endif %}
{% if description %}
            'description'   => {{ m.translate(description, text_domain, translate) }},
{% endif %}
